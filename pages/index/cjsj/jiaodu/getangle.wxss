.movable {
  position: absolute;
  height: 20px;
  width: 20px;
  color: white;
  text-align: center;
  line-height: 120px;
}

.btnArea {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 15px;
  border-top: 1rpx solid gray;
  background-color: white;
}
.btnArea:nth-last-child(1){
  border:none;
}
.btn{
  text-align: center;
  width: 150rpx;
  border-right: 1rpx solid #dddddd;
  font-size: 30rpx;
  line-height: 30rpx;
  height: 30rpx;
}

.enter .btn-2, .enter .btn-3 {
  border: 0;
  outline: none;
  background: #18b4ed;
  color: #fff;
  height: 100%;
  width: 8rem;
  font-size: 2rem;
}
.picker {
  width: 100%;
  height: 300px;
  position: fixed;
  bottom: 0px;
}
.disappear{
  opacity:0
}