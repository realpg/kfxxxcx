<!--pages/scale/history/detail/detail.wxml-->
<!--pages/scale/form/form.wxml-->
<form bindsubmit="formSubmit">
  <view wx:for="{{questions}}" wx:key="key" class="weui-cells">
    <view class="weui-cell que">{{index+1}}.{{item.question}}</view>

    <block wx:if="{{item.type==0}}">
      <radio-group name="{{index}}">
        <view class="weui-cell ans" wx:for="{{item.answer}}" wx:for-item="option" wx:for-index="idx">
          <label>
            <radio checked="{{results[index][idx]}}" disabled="true" value="" />{{option}}
          </label>
        </view>
      </radio-group>
    </block>

    <block wx:elif="{{item.type==1}}">
      <checkbox-group name="{{index}}">
        <view class="weui-cell ans" wx:for="{{item.answer}}" wx:for-item="option" wx:for-index="idx">
          <label>
            <checkbox checked="{{results[index][idx]}}" disabled="true" value="" />{{option}}
          </label>
        </view>
      </checkbox-group>
    </block>

  </view>


</form>