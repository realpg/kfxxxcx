<!--pages/my/history/history.wxml-->
<view class="page">
   <view class="page__hd weui-cells">
    <view class="weui-cell">
      <view class="weui-cell__hd" style='font-size:36rpx'>共有{{history.length}}条记录</view>
      <view class='weui-cell__ft'></view>
      <!-- <view class="page__title"style="">共有{{history.length}}条记录</view> -->
    </view>
  </view>
  <view class="page__bd">
    <view wx:for="{{history}}" wx:key="key">
      <view class="weui-cells__title">{{item.date}}:</view>

      <view class="weui-cells weui-cells_after-title" wx:for="{{item.measure}}" wx:for-item="measure" wx:key="key">
        <view class="weui-cell">
          <view class="weui-cell__bd">{{measure.name}}</view>
          <view class="weui-cell__ft">{{measure.value}}</view>
        </view>
      </view>
    </view>
  </view>
</view>